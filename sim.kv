ScreenManager:
    LoginScreen:
    HomeScreen:
    SignupScreen:
    ProdukScreen:
    KontakScreen:
    TransaksiScreen:
    AdminScreen:

<LoginScreen>: 
    name: 'Login'
    btnLogin_ : btnLogin
    txtUsername_ : txtUsername
    txtPassword_ : txtPassword
    
    TextInput:
        id: txtUsername
        pos_hint: {'center_x':0.5,'center_y':0.8}
        size_hint: (.2, None)
        height: 30
        multiline: False
        text: 'Username'
    
    TextInput:
        id: txtPassword
        pos_hint: {'center_x':0.5,'center_y':0.7}
        size_hint: (.2, None)
        height: 30
        multiline: False
        text: 'Password'

    MDRectangleFlatButton:
        id: btnLogin
        text: 'Login'
        pos_hint: {'center_x':0.5,'center_y':0.6}
        on_press: 
            root.manager.transition.direction = 'left'
            root.doLogin()  

    MDRectangleFlatButton:
        text: 'Signup'
        pos_hint: {'center_x':0.5,'center_y':0.53}
        on_press: 
            root.manager.transition.direction = 'left'
            root.manager.current = 'Signup'

